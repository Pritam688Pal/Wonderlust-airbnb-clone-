<% layout("./layouts/boilerplate.ejs") %>   
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Listing Details : </h3>
            <div class="class">
                <div class="card col-6 offset-3" style="width: 50rem;">
                    <img src="<%= e.image %>" class="card-img-top show-img" alt="Listing_Image">
                    <div class="card-body">
                        <p class="card-text">
                            <ul>
                                <p class="show-title"><b><%= e.title %></b><p></p>
                                <li><p><%= e.description %></p></li>
                                <li><p></p><span>&#8377;</span> <%= e.price %>/-</p></li>
                                <li><p></p><%= e.location %></p></li>
                                <li><p></p><%= e.country %></p></li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
            <div class="outer-show-form">
                <form class="show-form" action="/listings/<%= e._id %>/edit">
                    <button class="btn btn-outline-danger">Edit</button>
                </form>
                <form class="show-form" action="/listings/<%= e._id %>?_method=DELETE" method="post">
                    <button class="btn btn-outline-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</body>